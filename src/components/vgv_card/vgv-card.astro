---
interface Props {
  url: string;
}

const props = Astro.props;
---

<a href={props.url} class="contents">
  <div
    class="drop-shadow-lg rounded-lg overflow-hidden h-[100%] w-[100%] max-w-[478px] bg-[var(--vgv-card-bg)]"
  >
    <slot name="thumbnail" />
    <div class="p-4">
      <slot />
    </div>
  </div>
</a>

<style>
  a,
  a:visited,
  a:hover,
  a:active {
    color: inherit;
    text-decoration: none;
  }
</style>
